# Server Configuration
PORT=3000
NODE_ENV=development

# PostHog Configuration
POSTHOG_API_KEY=your_posthog_api_key_here
POSTHOG_HOST=https://app.posthog.com
# For self-hosted PostHog:
# POSTHOG_HOST=https://your-posthog-instance.com

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration (SQLite by default)
DATABASE_PATH=./data/insights.db

# Email Alerts Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=alerts@cosca.dev
ALERT_EMAIL=admin@yourcompany.com

# Slack Alerts Configuration (optional)
SLACK_TOKEN=xoxb-your-slack-bot-token
SLACK_CHANNEL=#alerts

# Security
JWT_SECRET=your_jwt_secret_here
API_RATE_LIMIT=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/dashboard.log

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Report Generation
REPORTS_DIR=./reports
MAX_REPORT_SIZE=50MB

# Alert Thresholds
CRITICAL_SECURITY_THRESHOLD=1
HIGH_PRIORITY_RECOMMENDATIONS_THRESHOLD=3
TECHNICAL_DEBT_THRESHOLD=30
PRODUCTIVITY_DROP_THRESHOLD=20
ERROR_RATE_INCREASE_THRESHOLD=50